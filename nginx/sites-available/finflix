#FinFlix.net
server {

        listen 80;
        listen [::]:80;

        server_name finflix.net www.finflix.net;
        return 301 https://$server_name$request_uri;
}

server {
 # SSL configuration

 listen 443 ssl http2 ;
 listen [::]:443 ssl http2;
 server_name finflix.net www.finflix.net;
 include /etc/nginx/snippets/strong-ssl.conf;
 ssl_certificate /etc/letsencrypt/live/finflix.net/fullchain.pem;
 ssl_certificate_key /etc/letsencrypt/live/finflix.net/privkey.pem;
# reverse proxy
 include /etc/nginx/snippets/finflix.conf;
}
